<%= link_to "Novi Banner", shop_banners_new_path ,class: "btn btn-success" %> <%= link_to "Home Banners", home_banners_index_path, class: "btn btn-default pull-right" %>
<div class="page-header head-page">
  <h1>Shop Banners</h1>
</div>

<div class="row" >

  <% @banners.order(:order).each do |ban| %>
      <% if ban.image_file_name != nil %>
          <div class="col-xs-6 col-md-12 js--msr-gall">
            <div class="container-fluid gallery" >
              <%= link_to banner_up_shop_banners_path(id: ban.id), method: :put do %> <%= image_tag("arrows.png") %> <% end %> <%= link_to banner_down_shop_banners_path(id: ban.id), method: :put do %> <%= image_tag("arrows-1.png") %> <% end %> <strong><%= ban.title %></strong>
            </div>
            <%= link_to image_tag(ban.image.url(:bann)) ,shop_banners_show_path(id: ban.id), method: :get , class: 'thumbnail' %>
          </div>
      <% end %>

  <% end %>
</div>