<h3>Uredi Kategoriju</h3>

<%= simple_form_for @category, html: {class: 'form-horizontal'} do |f| %>
    <%= f.input :title, label: "Naziv" %>

    <%= f.input :title_eng, label: "Naziv na Engleskom" %>

    <%= f.input :avatar, label: "Slika" , as: :file %>

    <%= f.label "Materijali" %>
    <%= f.association :materials, label: false, collection: Material.all, multiple: true, :include_blank => true, :input_html => {class: 'chosen-select'} %>
    <%= f.button :submit, "Izmijeni kategoriju" %>
    <%= link_to "Cancel", category_path(f.object.id), class: "btn btn-default" %>

<% end %>