
<div id="filterrific_results">


  <div style="margin-bottom: 20px">
  <%= page_entries_info articles %>
  </div>
  <div class="row" >



  <% articles.each do |art| %>

  <div class="col-xs-6 col-md-2 js--msr-gall">
    <div class="container-fluid gallery" >
  <strong><%= art.title %></strong>
    </div>
    <% if art.picture != nil %>
        <%= link_to image_tag(art.picture.image.url(:gallery)) ,article_path(art.id), method: :get , class: 'thumbnail' %>
    <% else %>
        <%= link_to image_tag('placeholder.png') ,article_path(art.id), method: :get, class: 'thumbnail' %>
    <% end %>
  </div>

  <% end %>
</div>
</div>

<%= paginate articles %>